<% provide(:title, 'Contact') %>
<h1>Contact</h1>
<p>
  <%= form_tag('/post') do%>
    <%= label_tag(:name, "Name: ") %>
    <%= text_field_tag(:name, nil, maxlength: '50', placeholder: 'Enter your name', class: 'test' ) %>
    <br/>
    <%= label_tag(:email, "Email: ") %>
    <%= email_field_tag(:email) %>
    <br/>
	<%= label_tag(:message, "Text: ") %>
	<br/>
	<%= text_area_tag(:message, nil, size: "24x6") %>
	<br/>
    <%= submit_tag("Save") %>
  <% end %>
</p>